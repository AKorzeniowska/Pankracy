<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:tint="@color/colorPrimaryDimmed"
        android:src="@drawable/ic_local_florist_black_24dp"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/title"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/icon"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    <ImageView
        android:id="@+id/water_it_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingVertical="18dp"
        android:paddingHorizontal="0dp"
        android:layout_toStartOf="@+id/is_outside_icon"
        android:src="@drawable/ic_weather_rain"
        android:tint="@color/colorPrimary" />
    <ImageView
        android:id="@+id/is_outside_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingVertical="15dp"
        android:paddingStart="0dp"
        android:paddingEnd="9dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_home_black_24dp"
        android:tint="@color/colorPrimaryVeryDimmed" />

</RelativeLayout>