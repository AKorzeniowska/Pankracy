<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_list_button"
        android:layout_width="151dp"
        android:layout_height="41dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="43dp"
        android:onClick="openListActivity"
        android:text="@string/plant_list_button"
        app:layout_constraintEnd_toStartOf="@+id/main_calendar_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_calendar_button"
        android:layout_width="129dp"
        android:layout_height="42dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="40dp"
        android:onClick="openCalendarActivity"
        android:text="@string/calendar_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_list_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:onClick="openWeatherTestActivity"
        android:text="@string/test_weather_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_list_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:onClick="issueNotification"
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification (TEST)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>